{
  "name": "bitwarden-cli-bio",
  "version": "0.1.0",
  "description": "A drop-in replacement for the Bitwarden CLI that adds biometric unlock support via the Desktop app",
  "main": "dist/index.js",
  "bin": {
    "bwbio": "dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts --clean",
    "dev": "tsup src/index.ts --format cjs --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "bitwarden",
    "cli",
    "biometrics",
    "touchid",
    "windows-hello"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
